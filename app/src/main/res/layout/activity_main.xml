<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera"
        android:keepScreenOn="true"
        app:cameraGesturePinch="zoom"
        app:cameraExperimental="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_close_small"
                app:tint="@color/white"
                android:background="@drawable/ic_ellipse_6"
                android:layout_margin="20dp"
                android:padding="4dp"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@drawable/ic_flash_active"
                android:background="@drawable/ic_ellipse_6"
                android:padding="8dp"
                android:layout_margin="20dp"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
        </LinearLayout>

    </com.otaliastudios.cameraview.CameraView>



    <FrameLayout
        android:id="@+id/flDrag"
        android:background="@android:color/transparent"
        app:behavior_peekHeight="196dp"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llGrid"
            android:alpha="0"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">
                <ImageView
                    android:layout_gravity="center|start"
                    android:src="@drawable/ic_back"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <ImageView
                    android:padding="16dp"
                    app:tint="#00574B"
                    android:layout_gravity="end|center"
                    android:src="@drawable/select_check_box_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/white"
                android:id="@+id/rvImageGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImageHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/llCameraControll"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivGallery"
            android:layout_gravity="start|center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:src="@drawable/ic_gallery2" />
        <ImageView
            android:id="@+id/clickImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/camera_back" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivSwitchCamera"
            android:layout_gravity="end|center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:src="@drawable/baseline_cameraswitch_24" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>